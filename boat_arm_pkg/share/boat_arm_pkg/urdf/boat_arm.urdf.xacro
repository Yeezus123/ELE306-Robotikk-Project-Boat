<?xml version="1.0"?>
<robot name="boat_arm">

  <!-- ========= BASE ========= -->
  <link name="base_link">
    <visual>
      <geometry>
        <!-- Liten "søyle" som base, 10 cm høy -->
        <cylinder length="0.10" radius="0.10"/>
      </geometry>
      <!-- Senter av sylinderen 0.05 m over base_link-origo -->
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <material name="blue">
        <color rgba="0.1 0.3 0.8 1.0"/>
      </material>
    </visual>
  </link>

  <!-- ======= JOINT 1: Base rotasjon (yaw rundt z) ======= -->
  <joint name="joint1" type="revolute">
    <parent link="base_link"/>
    <child  link="link1"/>
    <!-- På toppen av basen: 0.10 m over origo -->
    <origin xyz="0 0 0.10" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14" upper="3.14" effort="50" velocity="1.5"/>
  </joint>

  <link name="link1">
    <visual>
      <geometry>
        <!-- Første armsegment: 0.35 m -->
        <cylinder length="0.35" radius="0.04"/>
      </geometry>
      <!-- Link1-freame er i bunnen, så visual midt på: 0.35/2 = 0.175 -->
      <origin xyz="0 0 0.175" rpy="0 0 0"/>
      <material name="grey1">
        <color rgba="0.6 0.6 0.6 1.0"/>
      </material>
    </visual>
  </link>


  <!-- ======= JOINT 2: Skulder (bøyer frem/tilbake rundt y) ======= -->
  <joint name="joint2" type="revolute">
    <parent link="link1"/>
    <child  link="link2"/>
    <!-- På toppen av link1: 0.35 m over link1-bunnen -->
    <origin xyz="0 0 0.35" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-2.5" upper="2.5" effort="50" velocity="1.5"/>
  </joint>

  <link name="link2">
    <visual>
      <geometry>
        <!-- Andre segment: 0.25 m -->
        <cylinder length="0.25" radius="0.035"/>
      </geometry>
      <!-- Midt på: 0.25/2 = 0.125 -->
      <origin xyz="0 0 0.125" rpy="0 0 0"/>
      <material name="grey2">
        <color rgba="0.7 0.7 0.7 1.0"/>
      </material>
    </visual>
  </link>


  <!-- ======= JOINT 3: Albue (bøyer rundt y) ======= -->
  <joint name="joint3" type="revolute">
    <parent link="link2"/>
    <child  link="link3"/>
    <!-- På toppen av link2: 0.25 m -->
    <origin xyz="0 0 0.25" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-2.5" upper="2.5" effort="50" velocity="1.5"/>
  </joint>

  <link name="link3">
    <visual>
      <geometry>
        <!-- Tredje segment: 0.20 m -->
        <cylinder length="0.20" radius="0.03"/>
      </geometry>
      <!-- Midt på: 0.20/2 = 0.10 -->
      <origin xyz="0 0 0.10" rpy="0 0 0"/>
      <material name="grey3">
        <color rgba="0.8 0.8 0.8 1.0"/>
      </material>
    </visual>
  </link>


  <!-- ======= JOINT 4: Håndledd (bøyer rundt y) ======= -->
  <joint name="joint4" type="revolute">
    <parent link="link3"/>
    <child  link="link4"/>
    <!-- På toppen av link3: 0.20 m -->
    <origin xyz="0 0 0.20" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-3.14" upper="3.14" effort="20" velocity="2.0"/>
  </joint>

  <link name="link4">
    <visual>
      <geometry>
        <!-- Siste ledd: 0.15 m -->
        <cylinder length="0.15" radius="0.025"/>
      </geometry>
      <!-- Midt på: 0.15/2 = 0.075 -->
      <origin xyz="0 0 0.075" rpy="0 0 0"/>
      <material name="yellow">
        <color rgba="0.9 0.8 0.2 1.0"/>
      </material>
    </visual>
  </link>


  <!-- Ekstra: eget endeeffektor-frame helt på tuppen -->
  <joint name="ee_fixed" type="fixed">
    <parent link="link4"/>
    <child  link="end_effector"/>
    <!-- På toppen av link4: 0.15 m -->
    <origin xyz="0 0 0.15" rpy="0 0 0"/>
  </joint>

  <link name="end_effector">
    <visual>
      <geometry>
        <sphere radius="0.02"/>
      </geometry>
      <material name="red">
        <color rgba="0.9 0.1 0.1 1.0"/>
      </material>
    </visual>
  </link>

</robot>
